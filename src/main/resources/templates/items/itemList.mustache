{{>layout/header}}

    <div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>상품 종류</th>
                <th>상품명</th>
                <th>가격</th>
                <th>재고수량</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#items}} <!-- members 라는 리스트 순회 -->
            <tr>
                <td>{{id}}</td>
                <td> {{itemTypeName}}</td>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td>{{stockQuantity}}</td>
                <td>
                    <a href="/items/{{id}}/edit" class="btn btn-primary" role="button">수정</a>
                </td>
            </tr>
            {{/items}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}