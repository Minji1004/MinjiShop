{{>layout/header}}

<div>
    <div>
        <form class="navbar-form navbar-left" action="/orders" role="search">
            <div class="form-group">
                <input type="text" name="memberName" class="form-control" placeholder="회원명" value="{{#orderSearch.memberName}}{{orderSearch.memberName}}{{/orderSearch.memberName}}">
            </div>
            <div class="form-group">
                <select class="form-control" name="orderStatus">
                    <option value="">주문상태</option>
                    {{#orderStatusList}}
                        <option value="{{code}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                    {{/orderStatusList}}
                </select>
            </div>
            <button type="submit" class="btn btn-default">검색</button>
        </form>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>회원명</th>
            <th>상품명</th>
            <th>가격</th>
            <th>수량</th>
            <th>총 가격</th>
            <th>주문상태</th>
            <th>일시</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
    {{#orders}}
        <tr>
            <td>{{orderId}}</td>
            <td>{{memberName}}</td>
            <td>{{itemName}}</td>
            <td>{{orderPrice}}</td>
            <td>{{count}}</td>
            <td>{{totalPrice}}</td>
            <td>{{orderStatus}}</td>
            <td>{{orderDate}}</td>
            <td>
                {{#isOrder}}
                <a href="/orders/{{orderId}}/cancel" class="btn btn-danger">주문취소</a>
                {{/isOrder}}
            </td>
        </tr>
    {{/orders}}
        </tbody>
    </table>
</div>

<div class="container">
    <div class="row">
        <div class="col text-center">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>
</div>

{{>layout/footer}}